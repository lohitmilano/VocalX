<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PocketStudio" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/on_background</item>
        <item name="android:textColorSecondary">@color/on_surface</item>
    </style>
    
    <style name="Theme.PocketStudio.Dark" parent="android:Theme.Material.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/background_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/on_background</item>
        <item name="android:textColorSecondary">@color/on_surface</item>
    </style>
</resources>
